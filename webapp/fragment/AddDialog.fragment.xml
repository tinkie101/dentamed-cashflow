<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form">
	<Dialog id="addDialog"
			title="New input"
			state="Information"
			class="sapUiSizeCompact">
		<beginButton>
			<Button text="Add"
					icon="sap-icon://add"
					type="Accept"/>
		</beginButton>
		<endButton>
			<Button text="Cancel"
					icon="sap-icon://cancel"/>
		</endButton>
		<f:SimpleForm editable="true"
					  columnsL="1"
					  layout="ResponsiveGridLayout">
			<f:content>
				<Label text="{i18n>date}"/>
				<DatePicker
					minDate="{viewModel>/minDate}"
					maxDate="{viewModel>/maxDate}"/>

				<Label text="{i18n>type}"/>
				<Button text="{= ${viewModel>income}? 'Income': 'Expense'}"
						type="{= ${viewModel>income}? 'Accept': 'Reject' }"
						press="onToggleType"
						visible="{viewModel>/editable}"/>

				<Label text="{i18n>value}"/>
				<Input visible="{viewModel>/editable}"
					   type="Number"
					   value="{viewModel>value}"/>

				<Label text="{i18n>comment}"/>
				<Input visible="{viewModel>/editable}"
					   value="{viewModel>comment}"/>
			</f:content>
		</f:SimpleForm>
	</Dialog>
</core:FragmentDefinition>
